" mouse interactions
set mouse=a

" display
set ruler
set wrap
set showbreak=>
set showcmd
set scrolloff=4

" line numbers
set number
set numberwidth=3

" search
set hlsearch
set incsearch
set ignorecase
set smartcase

set nocompatible
syntax on 
filetype on
filetype plugin on

set shiftwidth=2
set tabstop=2
set softtabstop=2
set expandtab
filetype indent on

set showmatch
